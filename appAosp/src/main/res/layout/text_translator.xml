<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/texttranslatorLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/keyheaderbg"
    android:orientation="vertical"
    android:visibility="gone"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    >



    <ImageButton
        android:id="@+id/switch_editor"
        style="@style/SmartbarQuickActions"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/et_text_translator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_text_translator"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:background="@drawable/edit_text_shape"
        android:focusableInTouchMode="true"
        android:hint="@string/enter_text_to_translate"
        android:maxLines="1"
        android:padding="5dp"
        android:scrollbars="horizontal"
        android:singleLine="true"
        android:textColor="@color/textColorWarning"
        android:textColorHint="@color/ic_launcher_background"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/translate_text"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/switch_editor"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/translate_text"
        style="@style/SmartbarQuickActions"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_translation_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/et_text_translator"
        app:layout_constraintTop_toTopOf="parent" />

